amounts = website.db.all("""

    SELECT amount
      FROM (SELECT amount
              FROM current_payment_instructions cpi
              JOIN participants p ON p.username = cpi.participant
              JOIN teams t ON t.slug = cpi.team
             WHERE cpi.is_funded
               AND t.is_approved
