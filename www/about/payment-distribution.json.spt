       , (D('500.01'), D('1000.00'))
        ]

n = [0 for i in range(len(bins))]
value = [0 for i in range(len(bins))]
i = 0
for amount in amounts:
    while amount > bins[i][1]:
        i += 1
    n[i] += 1
